<h1>Burgers!</h1>
<div id="freshBurgers">
    <h2>Burgers to Eat!</h2>
    <ul>
        {{#each burgers}}
            {{#unless this.devoured}}
                <li>
                    {{this.burger_name}}
                    <form action="{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button type="submit">Bite Me!</button>
                    </form>
                </li>
            {{/unless}}
        {{/each}}
    </ul>
</div>

<div id="ateBurgers">
    <h2>Burgers eaten</h2>
    <ul>
        {{#each burgers}}
            {{#if this.devoured}}
                <li>
                    {{this.burger_name}}
                </li>
            {{/if}}
        {{/each}}
    </ul>
</div>

<div id="makeBurgers">
    <h2>Create a burger!</h2>
                    <form action="/" method="POST">
                        <label for="stuff">Burger Name:</label>
                        <input id="stuff" type="text" name="burger" required>
                        <button type="submit">Make Burger</button>
                    </form>
</div>